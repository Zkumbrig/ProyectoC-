@model ProductosModel
@{
    ViewData["Title"] = "deleteProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
            </div>
        </nav>
    </header>

</body>
<div class="card">
    <div class="card-header">
        Eliminar Producto
    </div>
    <div class="card-body">
        <form asp-action="deleteProduct" asp-controller="Producto" method="post">
            <input asp-for="IdProduct" type="hidden" class="form-control" />
            <div class="alert alert-primary" role="alert">
                ¿Desea eliminar este producto: @Html.DisplayTextFor(m=> m.NameProduct) ?
            </div>
            <button type="submit" class="btn btn-danger"><i class="bi bi-person-x-fill  me-2"></i>Eliminar</button>
            <a asp-action="Productos" asp-controller="Producto" class="btn btn-warning"><i class="bi bi-backspace me-2"></i>Volver a la lista de Productos</a>
        </form>
    </div>
</div>

