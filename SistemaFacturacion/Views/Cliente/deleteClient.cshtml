@model ClientesModel
@{
    ViewData["Title"] = "deleteClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
            </div>
        </nav>
    </header>

</body>
<div class="card">
    <div class="card-header">
        Eliminar Cliente
    </div>
    <div class="card-body">
        <form asp-action="deleteClient" asp-controller="Cliente" method="post">
            <input asp-for="IdClient" type="hidden" class="form-control" />
            <div class="alert alert-primary" role="alert">
                ¿Desea eliminar este cliente: @Html.DisplayTextFor(m=> m.NameClient) ? 
            </div>
            <button type="submit" class="btn btn-danger"><i class="bi bi-person-x-fill  me-2"></i>Eliminar</button>
            <a asp-action="Clientes" asp-controller="Cliente" class="btn btn-warning"><i class="bi bi-backspace me-2"></i>Volver a la lista de Clientes</a>
        </form>
    </div>
</div>

