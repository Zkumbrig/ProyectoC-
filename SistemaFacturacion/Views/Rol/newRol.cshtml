@model RolesModel
@{
    ViewData["Title"] = "newRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
            </div>
        </nav>
    </header>

</body>
<div class="card">
    <div class="card-header">
        Crear Rol
    </div>
    <div class="card-body">
        <form asp-action="newRol" asp-controller="Rol" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre del Rol</label>
                <input asp-for="NombreRol" type="text" class="form-control">
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle  me-2"></i>Guardar</button>
            <a asp-action="Roles" asp-controller="Rol" class="btn btn-warning"><i class="bi bi-backspace me-2"></i>Volver a la lista de Roles</a>
        </form>
    </div>
</div>

